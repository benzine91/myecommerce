{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1>Register</h1>

        <div class="p-3 m-3"></div>
            <div class="d-flex justify-content-center">
                <div class="col-6 card">
                    <div class="card-body">

                        {{ form_start(registrationForm) }}

                            <div>{{ form_label(registrationForm.nom) }}</div>
                            <div class="text-danger">{{ form_errors(registrationForm.nom) }}</div>
                            <div>{{ form_widget(registrationForm.nom) }}</div>

                            <div>{{ form_label(registrationForm.prenom) }}</div>
                            <div class="text-danger">{{ form_errors(registrationForm.prenom) }}</div>
                            <div>{{ form_widget(registrationForm.prenom) }}</div>

                            <div>{{ form_label(registrationForm.email) }}</div>
                            <div class="text-danger">{{ form_errors(registrationForm.email) }}</div>
                            <div>{{ form_widget(registrationForm.email) }}</div>

                            <div>{{ form_label(registrationForm.plainPassword) }}</div>
                            <div class="text-danger">{{ form_errors(registrationForm.plainPassword) }}</div>
                            <div>{{ form_widget(registrationForm.plainPassword) }}</div>

                            <div>{{ form_label(registrationForm.agreeTerms) }}</div>
                            <div class="text-danger">{{ form_errors(registrationForm.agreeTerms) }}</div>
                            <div>{{ form_widget(registrationForm.agreeTerms) }}</div>

                            <button type="submit" class="btn">Register</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>    
            <div class="p-3 m-3"></div>
    </div>
{% endblock %}
